@model IEnumerable<string>
@{
    ViewData["Title"] = "ImageShow";
}

<h1>Resimler</h1>
@foreach (var item in Model)
{
    <img src="~/images/@item" style="width:100px;height:100px;float:left;border:1px; solid red;"/>
    <h3>@item</h3>
}
<form method="post">
    <input type="text" name="imageName" placeholder="Silinecek resmin adını giriniz."/>
    <br />
    <button class="btn btn-danger">Sil</button>
</form>